<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <title>URL Analysis</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
</head>
<body class="min-h-screen flex flex-col items-center bg-gray-100 py-12">

    <!-- Page Header -->
    <h1 class="text-3xl font-bold text-blue-600 mb-8">URL Analysis</h1>

    <!-- Analysis Table -->
    <div class="w-full max-w-4xl bg-white rounded-lg shadow-lg p-8">
        <% if (urls.length > 0) { %>
            <table class="min-w-full divide-y divide-gray-200">
                <thead>
                    <tr>
                        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">URL</th>
                        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Clicks</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% urls.forEach(url => { %>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= url.url %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= url.clicks %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-gray-500 text-center text-lg">No URLs found for analysis.</p>
        <% } %>
    </div>

</body>
</html>
